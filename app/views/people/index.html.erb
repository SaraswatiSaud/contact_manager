<h1>Listing People</h1>
<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
  </tr>

  <% @people.each do |f| %>
    <tr>
      <td><%= f.id %></td>
      <td><%= f.first_name %></td>
      <td><%= f.last_name %></td>
      <td><%= link_to 'Show', person_path(f) %></td>
      <td><%= link_to 'Edit', edit_person_path(f) %></td>
      <td><%= link_to 'Delete', person_path(f),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<br>
<%= link_to 'Create new person', new_person_path %>
